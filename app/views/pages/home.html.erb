<% content_for :id, 'home' %>

<% content_for :content_banner do %>
	<div class="content_banner">
		<div class="marketing">
			<h2>Inscrivez dès maintenant votre groupe, oeuvre ou réseau !</h2>
			<div class="btn">
				<%= link_to "Inscrire", new_cards_wizard_path %></p>
			</div>
		</div>
		<div class="video">
			<div id="player"></div>
			<a class="download" href="http://storage.googleapis.com/reseaujeunesse-ch/my-assets/videos/ReseauJeunesse.mp4.zip">Télécharger la vidéo</a>
		</div>
	</div>
<% end %>

<div class="new">
	<div class="_title-large">
		<div class="wrapper">
			<h2>Dernières publications</h2>
			<span>Découvrez des ressources et plein de contenu spécialement pour vous <%= link_to 'ressources', resources_path %></span>
			<div class="clear"></div>
		</div>
	</div>
	<% if @article %>
	<div class="block left">
		<article class="wrapper article">
			<div class="type">Article <i class="fi-clipboard-notes"></i></div>
			<div class="graphic">
				<%= image_tag image_url @article.image.mid %>
			</div>
			<div class="text">
				<h3><%= link_to @article.title, articles_path %></h3>
				<div class="content">
					<p>
						<%= truncate(sanitize(@article.content, tags: Article::ALLOWED_TAGS), length: 500, omission: " ... %s", escape: false) % link_to('lire la suite', article_path(@article)) %>
					</p>
				</div>
			</div>
			<div class="clear"></div>
		</article>
	</div>
	<% end %>
	<div class="block right">
		<div class="wrapper">
			<div class="type"><i class="fi-battery-full"></i></div>
			<div class="text full">
				<h3>Activité du site</h3>
				<div class="content">
					<div class="charts">
						<div class="chart">
							<%= link_to "", reseau_path, class: "link" %>
							<div class="easy-chart" data-value="<%= @card_count %>" data-percent="<%= @card_count %>" ><span></span></div>
							<div class="label">Groupes, oeuvres ou réseaux</div>
						</div>
						<div class="chart">
							<%= link_to "", orators_path, class: "link" %>
							<div class="easy-chart" data-value="<%= @orator_count %>" data-percent="<%= @orator_count %>" ><span></span></div>
							<div class="label">Orateurs</div>
						</div>
						<div class="chart">
							<%= link_to "", documents_path, class: "link" %>
							<div class="easy-chart" data-value="<%= @doc_count %>" data-percent="<%= @doc_count %>" ><span></span></div>
							<div class="label">Documents</div>
						</div>
						<div class="chart">
							<%= link_to "", profile_path, class: "link" %>
							<div class="easy-chart" data-value="<%= @user_count %>" data-percent="<%= @user_count %>" ><span></span></div>
							<div class="label">Utilisateurs</div>
						</div>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>

<div class="map">

	<div class="_title-large">
		<div class="wrapper">
			<h2>Le réseau</h2>
			<span>Vous cherchez un groupe, une oeuvre ou un réseau ? Rendez-vous sur <%= link_to 'réseau', reseau_path %></span>
			<div class="clear"></div>
		</div>
	</div>
	<%= render 'map' %>
	<div id="clear_map"></div>
</div>