$('#header').find('.profile').fadeOut(500, function() {
  $(this).html('<%=j render "layouts/profile" %>').fadeIn(500, function() {
    var a = $('nav .profil ul');
    a.hide();
    $('nav .profil').hover(
      function(){
        a.show();
      }, 
      function(){
        a.hide();
      }
    );  
  });
});
