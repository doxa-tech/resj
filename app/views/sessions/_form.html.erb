<div class="sessions-error"></div>
<div class="field">
	<%= f.label :email %>
	<%= f.email_field :email %>
</div>
<div class="field">
	<%= f.label :password %>
	<%= f.password_field :password %>
</div>
<div class="field">
	<%= f.label :remember_me %>
	<%= f.check_box :remember_me %>
</div>
<div class="field">
	<%= f.submit class: 'submit' %>
</div>
<div class="reset">
	<%= link_to "Password forgotten", new_password_reset_path %>
</div>