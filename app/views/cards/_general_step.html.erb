<%= render layout: 'form' do |f| %>

	<div class="welcome">
		<h2>Êtes-vous prêt à connecter avec le réseau jeunesse?</h2>
		<div class="txt">
			<p> Bienvenue dans le processus</p>
		</div>
	</div>
	
	<div class="block">
		<div class="label">
			<p><span class="num">1</span> Indiquez le <span class="b">nom</span> de votre groupe</p>
		</div>
		<!-- 	<%= f.label :name %> -->
		<%= f.text_field :name %>
	</div>
	
	<div class="block">
		<div class="label">
			<p><span class="num">2</span> Entrez une courte <span class="b">description</span>. Une bonne description améliore les résultats de recherche.</p>
		</div>
		<!-- 	<%= f.label :description %> -->	
		<%= f.text_area :description %>
	</div>

	<div class="block">
		<!-- 	<%= f.label :card_type_id %> -->
		<div class="label">
			<p><span class="num">2</span> Quelle <span class="b">catégorie</span> vous correspond le mieux?</p>
		</div>
		<%= f.collection_select :card_type_id, CardType.all, :id, :name, {include_blank: "Category"}, {class: "selectize"} %>
	</div>

	<div class="block">
		<!-- 	<%= f.label :card_id %> -->
		<div class="label">
			<p>
				<span class="num">3</span> Faites-vous partie d'un <span class="b">réseau régional</span>?
			</p>
		</div>
		<%= f.collection_select :card_id, Card.where('card_type_id = ?', CardType.find_by_name("Réseau régional") ), :id, :name, {include_blank: "Aucun"}, {class: "selectize"} %>
	</div>

<% end %>

