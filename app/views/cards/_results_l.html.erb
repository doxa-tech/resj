<div>
  <p class="paginate-infos"><%= paginate_range @cards_paginate %></p>
  <%= will_paginate @cards_paginate %>
</div>

<div class="index">
  <% if @cards_paginate.any? %>
    <ul>
  		<% current = @cards_paginate.first.name[0].downcase %>
  		<li class="letter"><%= current %></li>
  		<% @cards_paginate.each do |card| %>
  			<% if card.name[0].downcase != current %>
  				<% current = card.name[0].downcase %>
  				<li class="letter"><%= current %></li>
  			<% end %>
  			<li class="card">
          <%= content_tag :span, card.card_type.name, class: 'type' %> <%= link_to card.name, card_path(card) %>
          <i class="fi-arrow-down show-description"></i>
          <i class="fi-marker show-on-map <%= card.map_marker_color %>" data-id="<%= card.id %>"></i>
          <p class="description"><i class="fi-megaphone"></i><%= card.description %></p>
        </li>
  		<% end %>
    </ul>
  <% else %>
  <div id="clear"></div>
  <div class="nothing">
    <p class="icon"><span class="fi-list-bullet"></span></p>
    <p>Votre recherche n'a donné aucun résultat.</p>
  </div>
  <% end %>
</div>