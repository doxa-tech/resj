<% content_for :id, 'cards' %>

<%= javascript_include_tag "map/a_mapbox_v1.5.2.js" %>
<%= javascript_include_tag "map/b_leaflet.markercluster.js" %>
<%= javascript_include_tag "cards_index.js" %>

<%= form_tag reseau_path, method: :get, remote: true, id: "search-form" do %>
	<div id="_search-top">
		<div class="right">
		 	<ul class="nav">
		 		<li class="hder">
		 			<div class="infos">
		 				<p>Vous n'y êtes pas encore?</p>
		 			</div>
		 			<div class="btn">
		 				<%= link_to "Rejoindre le réseau", new_card_path %>
		 			</div>
		 		</li>
		 		<li class="marketing">
		 			<div class="marketing">
		 				<p><b>Votre réseau!</b> En connectant ton groupe, ton organisation ou ton événement à tout ce qui se fait en Suisse romande, tu contribues à une vue d’ensemble motivante et à une visibilité nouvelle dans ta région et bien au-delà. Zoom dans ta région et sois encouragé de voir tout ce qui s'y vit!</p>
		 			</div>
		 		</li>
		 	<ul>
		</div>
		<div class="left">	
		  <div class="search">
		  	<div class="form">
					<%= search_field_tag :query, nil, placeholder: "essayez 'gdj', 'camps', 'Lausanne'" %>
					<button>Tapez</button>
					<%= submit_tag "", :name => nil, type: :hidden %>
				</div>
		  </div>	
		</div>		
	</div>

	<div class="rows" id="results">
		<div class="left">
				<%= content_tag :div, id: "filter" do %>
			  	<h3>Filtres <span class="show">voir</span></h3>
			    <ul>
			      <li>
			        <h4>Type</h4>  
			      <li>
			        <% CardType.all.each do |card_type| %>
			        	<div class="field">
									<%= label_tag card_type.name %>
									<%= check_box_tag "card_type_ids[]", card_type.id %>
								</div>
							<% end %>
			      </li>
			    </ul>
			    <ul>
			      <li>
			        <h4>Canton</h4>  
			      <li>
			        <% Canton.all.each do |canton| %>
			        	<div class="field">
									<%= label_tag canton.name %>
									<%= check_box_tag "canton_ids[]", canton.id %>
								</div>
							<% end %>
			      </li>
			    </ul>
			    <ul>
			      <li>
			        <h4>Tags</h4>  
			      <li>
			        <% Tag.all.each do |tag| %>
			        	<div class="field">
									<%= label_tag tag.name %>
									<%= check_box_tag "tag_ids[]", tag.id %>
								</div>
							<% end %>
			      </li>
			    </ul>
			  <% end %>	
			<div class="left-content"><%= render 'results_l' %></div>
		</div>
		<div class="right">
			<%= render 'results_r' %>
		</div>
		<div class="clear"></div>
	</div>
<% end %>

<%= render 'ajax_loader' %>
