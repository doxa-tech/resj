$('.wizard').html('<%=j render "#{@card.current_step}_step" %>');
<% case @card.current_step %>
	<% when "general" %>
		selectize.cards();
		selectize.default();
	<% when "location" %>
		selectize.location();
		load_map_stuff();
	<% when "team" %>
		autocomplete();
		hide_contact()
	<% when "extra" %>
		selectize.tags();
	<% when "final" %>
		form.card();
<% end %>