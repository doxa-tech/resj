

<div id="banner-container"></div>

<% if current_permission.allow_modify?('cards','edit', @card) %>
	<div class="edit-banner">
		<button class="edit-banner" type="button">Editer <span class='fi-pencil'></span></button>
		<div class="tools">
			<ul>
				<li>
					<%= form_for @card, url: upload_banner_card_images_path(@card), html: {id: 'banner-form'} do |f| %>
						<%= f.label :banner, "<span class='fi-pencil'></span> Changer l'image".html_safe %>
						<%= f.file_field :banner %>
					<% end %>
				</li>
				<% if @card.banner.present? %>
				<li>
					<%= link_to remove_banner_card_images_path(@card), method: :delete, remote: true, data: {confirm: "Supprimer l'image ?"} do %>
						<span class='fi-x'></span> Supprimer l'image
					<% end %>
				</li>
				<% end %>
				<li><%= link_to '<span class="fi-info"></span> Aide sur le format'.html_safe, root_path, target: '_blank' %></li>
			</ul>
		</div>
	</div>
<% end %>