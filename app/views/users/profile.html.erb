<% content_for :id, "profile" %>

<div class="col split1">
	<div class="block">
		<div class="header">
			<h2>Votre compte sur ResJ</h2>
		</div>
		<ul>
			<li class="avatar">
				<a href="<%= profile_path %>"><%= image_tag image_url current_user.gravatar %></a>
			</li>
			<li>
				<%= "#{current_user.firstname} #{current_user.lastname}" %> <%= render 'application/admin/edit_btn', path: user_edit_path %>
			</li>
			<li>
				Groupe <%= render 'application/admin/edit_btn', path: user_my_cards_path %>
			</li>
			<li>
				Avatar <span class="settings push-right fi-widget"></span>
			</li>
		</ul>
	</div>
</div>