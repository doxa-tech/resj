<% content_for :id, "container-users-password-edit" %>

<div class="session-form session-form-green">
  <div class="wrapper">
    <div class="title">
      <span>Réinitialiser son mot de passe</span>
    </div>

    <p class="intro">
      Vous pouver rentrer un nouveau mot de passe. Celui-ci remplacera l'ancien et vous permettra de vous connecter à votre compte.
    </p>

    <%= form_for @user, url: users_password_reset_path(params[:id]) do |f| %>

      <%= render 'error_messages', object: f.object %>

      <div class="row">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Nouveau mot de passe" %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit "Mettre à jour" %>

    <% end %>

  </div>
</div>