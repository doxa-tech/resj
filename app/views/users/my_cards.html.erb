<% content_for :id, "my_cards" %>
<% unconfirmed = @user.unconfirmed_cards %>
<% confirmed = @user.confirmed_cards %>
<% confirmed_paginate = @user.confirmed_cards.paginate(page: params[:page], per_page: 10) %>

<div class="row">
	<div class="col split1">
		<div class="block">
			<div class="header">
				<h2>Vos liens</h2>
				<h5>Groupes, oeuvres ou réseaux au sein desquels vous êtes responsable ou co-responsable</h5>
				<%= will_paginate confirmed_paginate %>
			</div>
			<ul>
				<% if confirmed_paginate.empty? %>
					<li>
						Vous n'avez pas d'affiliations
					</li>
					<% else %>
						<% confirmed_paginate.each do |card_user| %>
							<li><%=  card_user.name %> <%= render 'application/admin/edit_btn', path: overview_card_path(card_user) %></li>
						<% end %>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div clas="row">
	<div class="col split1">
		<div class="block">
			<div class="header">
				<h2>Créer un lien</h2>
				<h5>S'annoncer en tant que responsable d'un groupe, d'une oeuvres ou d'un réseaux. Le responsable devra valider votre lien avant que celui-ci devienne effectif.</h5>
			</div>
			<%= form_tag user_card_request_path do %>
			<ul>
				<li>
					<%= select_tag :card_id, options_from_collection_for_select(Card.all - confirmed, :id, :name), class: "selectize" %>
					<%= submit_tag %>
				</li>
			</ul>
			<% end %>
		</div>
	</div>
</div>

<div clas="row">
	<div class="col split1">
		<div class="block">
			<div class="header">
				<h2>Demandes de liens</h2>
				<h5>Gérer les demandes pour s'annoncer comme responsabel de votre groupe, oeuvre ou réseau</h5>
			</div>
			<% if !unconfirmed.empty? %>
				<% unconfirmed.each do |card_user| %>
					<ul>
						<li>
							<%= card_user.card.name %>
							<%= link_to "Confirmer", user_card_confirmation_path(card_user_id: card_user.id, validated: "true"), method: :post %>
							<%= link_to "Refuser", user_card_confirmation_path(card_user_id: card_user.id, validated: "false"), method: :post %>
						</li>
					</ul>
				<% end %>
			<% else %>
				<ul>
					<li> Pas de demandes en cours </li>
				</ul>
			<% end %>
		</div>
	</div>
</div>