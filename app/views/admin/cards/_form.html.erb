<%= form_for [:admin, @card] do |f| %>
	
	<%= render 'error_messages', object: f.object %>

	<div class="row">
		<div class="col split2">
			<div class="block">
				<div class="header">
					<h2>Informations Générales</h2>
				</div>
				<ul>
					<li>
						<%= f.label :name %>
						<%= f.text_field :name %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :description %>
						<%= f.text_area :description %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :card_type_id %>
						<%= f.collection_select :card_type_id, CardType.all, :id, :name, {include_blank: "Category"}, {class: "selectize"} %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :card_id %>
						<%= f.collection_select :card_id, Card.where('card_type_id = ?', CardType.find_by_name("Réseau régional") ), :id, :name, {include_blank: "Aucun"}, {class: "selectize"} %>
					</li>
				</ul>
			</div>
		</div>

		<div class="col split2">
			<div class="block">
				<div class="header">
					<h2>Location</h2>
				</div>
				<ul>
					<li>
						<%= f.label :street %>
						<%= f.text_field :street %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :location_id %>
						<% location = f.object.location %>
						<%= f.collection_select :location_id, (location.nil? ? [] : [location] ), :id, :full_name, {include_blank: "Select a city"}, {class: "selectize-location"} %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :place %>
						<%= f.text_field :place %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :latitude %>
						<%= f.text_field :latitude %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :longitude %>
						<%= f.text_field :longitude %>
					</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col split2">
			<div class="block">
				<div class="header">
					<h2>Contact</h2>
				</div>
				<ul>
					<li>
						<%= f.label :email %>
						<%= f.text_field :email %>
					</li>
				</ul>
				<div class="header">
					<h3>Team</h3>
				</div>
					<ul class="team">
						<li>
							<div class="association_fields autocomplete" data-link="responsables">
								<%= f.fields_for(:responsables, @card.responsables.any? || @card.responsables.build) do |responsables_fields| %>
									<%= content_tag :div, class: "fields" do %>
										<div class="field">
											<%= responsables_fields.label :firstname %>
											<%= responsables_fields.text_field :firstname, data: {attr: "firstname"} %>
										</div>
										<div class="field">
											<%= responsables_fields.label :lastname %>
											<%= responsables_fields.text_field :lastname, data: {attr: "lastname"} %>
										</div>
										<div class="field">
											<%= responsables_fields.label :email %>
											<%= responsables_fields.text_field :email %>
										</div>
										<div class="field">
											<%= responsables_fields.hidden_field :_destroy, identifier: "destroy" %>
											<%= link_to_remove_fields "remove" %>
											<% if @card.new_record? %>
												<%= responsables_fields.hidden_field :is_contact, identifier: "is_contact" %>
												<%= link_to_add_contact "Mark as contact" %>
											<% end %>
										</div>
									<% end %>
								<% end %>
								<%= link_to_add_fields("New responsable") %>
							</div>
						</li>
					</ul>
					<ul>
						<li>
								<%= f.fields_for :users do |user_fields| %>
									<div class="fields">
										<%= user_fields.object.full_name %>
										<%= user_fields.hidden_field :_destroy, identifier: "destroy" %>
										<%= link_to_remove_fields "remove" %>
									</div>
								<% end %>
							</li>
						</ul>
				</div>
		</div>
		<div class="col split2">
			<div class="block">
				<div class="header">
					<h2>Extra infos</h2>
				</div>
				<ul>
					<li>
						<%= f.label :website %>
						<%= f.text_field :website %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :tag_names %>
						<%= f.text_field :tag_names, class: "selectize-tags" %>
					</li>
				</ul>
				<div class="header">
					<h3>Affiliations</h3>
				</div>
				<ul>
					<li>
						<%= @card.affiliation %>
					</li>
				</ul>
				<ul class="affiliation">
					<li>
						<div class="association_fields autocomplete" data-link="affiliations" >
							<%= f.fields_for(:affiliations, @card.affiliations.any? || @card.affiliations.build) do |affiliation_fields| %>
								<div class="fields">
									<div class="field">
										<%= affiliation_fields.label :name %>
										<%= affiliation_fields.text_field :name, data: {attr: "name"} %>
										<%= affiliation_fields.hidden_field :_destroy, identifier: "destroy" %>
									</div>
									<div class="field">
										<%= link_to_remove_fields "remove" %>
									</div>
								</div>
							<% end %>
							<%= link_to_add_fields("New affiliation") %>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col split2">
			<div class="block">
				<div class="header">
					<h2>Graphics</h2>
				</div>
				<ul>
					<li>
						<%= f.label :avatar %>
						<%= image_tag(@card.avatar_url) if @card.avatar? %>
						<%= f.file_field :avatar %>
						<%= f.check_box :remove_avatar %>
					</li>
				</ul>
				<ul>
					<li>
						<%= f.label :banner %>
						<%= image_tag(@card.banner_url) if @card.banner? %>
						<%= f.file_field :banner %>
						<%= f.check_box :remove_banner %>
					</li>
				</ul>
			</div>
		</div>

		<% if !@card.validated && current_permission.allow_params?(params[:controller], "validated") %>
			<div class="col split2">
				<div class="block">
					<div class="header">
						<h2>Admin</h2>
					</div>
					<ul>
						<li>
							<%= f.label :validated %>
							<%= f.check_box :validated, {}, true %>
						</li>
					</ul>
				</div>
			</div>
		<% end %>
		<div id="clear"></div>
		<div class="button">
			<%= f.submit %>
		</div>
	</div>

<% end %>
<% unless @card.new_record? %>
	<%= form_tag user_request_card_path(@card) do %>
		<%= select_tag :user_id, options_from_collection_for_select(User.users - @card.users, :id, :full_name), class: "selectize" %>
		<%= submit_tag %>
	<% end %>

	<% @card.unconfirmed_card.each do |card_user| %>
		<%= card_user.user.full_name %>
		<%= link_to "Confirm", user_confirmation_card_path(@card, card_user_id: card_user.id, validated: "true"), method: :post %>
		<%= link_to "Refus", user_confirmation_card_path(@card, card_user_id: card_user.id, validated: "false"), method: :post %>
	<% end %>
<% end %>