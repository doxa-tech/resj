<div class="col split1">
	<div class="block">
		<div class="header">
			<h2><%= @card.card_type.name %> : <%= @card.name %></h2>
		</div>
		<ul>

			<li>
				<h5>Status en cours</h5>
				<p><%= @card.status.name %></p>
			</li>

			<li class="in-place">
				<h5>Appelation</h5>
				<p><%= @card.name %></p>
			</li>

			<li class="in-place">
				<h5>Type</h5>
				<p><%= @card.card_type.name %></p>
			</li>

			<li class="in-place">
				<h5>Description</h5>
				<p><%= @card.description %></p>
			</li>

		</ul>
	</div>
</div>
<div class="row"><br><br></div>
<div class="col split1">
	<div class="block">
		<ul>

			<li class="in-place">
				<h5>Rue</h5>
				<p><%= @card.street %></p>
			</li>

			<li class="in-place">
				<h5>Localité</h5>
				<p><%= @card.location.full_name %></p>
			</li>

			<li  class="in-place">
				<h5>Lieu de rencontre</h5>
				<p><%= @card.place %></p>
			</li>

			<li>
				<h5>Localisation sur une carte</h5>
				<div id="map-canvas"></div>
			</li>

		</ul>
	</div>
</div>
<div class="row">
<div class="row"><br><br></div>
<div class="col split1">
	<div class="block">
		<ul>

			<li class="in-place">
				<h5>Email de contact public</h5>
				<p><%= @card.email %></p>
			</li>

			<li class="in-place">
				<h5>Site web</h5>
				<p><%= @card.website %></p>
			</li>

			<li class="in-place">
				<h5>Affiliation avec un réseau régional</h5>
				<p><%= @card.parents_list %></p>
			</li>

		</ul>
	</div>
