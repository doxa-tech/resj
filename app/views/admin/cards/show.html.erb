<%= image_tag(@card.avatar_url) %>
<%= image_tag(@card.banner_url) %>

<%= @card.name %>

<%= @card.description %>

<%= @card.card_type.try(:name) %>

<%= @card.street %>

<%= @card.city %>

<%= @card.npa %>

<%= @card.latitude %>

<%= @card.longitude %>

<%= @card.place %>

<%= @card.email %>

<% @card.responsables.each do |responsable| %>
	<%= responsable.firstname %>
	<%= responsable.lastname %>
	<%= responsable.email %>
<% end %>

<% @card.affiliations.each do |affiliation| %>
	<%= affiliation.name %>
<% end %>

<%= @card.website %>

<% @card.tags.each do |tag| %>
	<%= tag.name %>
<% end %>