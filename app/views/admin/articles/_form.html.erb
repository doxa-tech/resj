<%= javascript_include_tag "ckeditor-jquery" %>
<%= javascript_include_tag "ckeditor_area" %>

<%= form_for [:admin, @article] do |f| %>

	<%= render 'error_messages', object: f.object %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content, class: "ckeditor-article" %>

	<%= f.label :published_at %>
	<%= f.datetime_select :published_at %>

	<%= f.label :theme_ids %>
	<%= f.collection_select :theme_ids, Theme.all, :id, :name, {include_blank: "Sélectionnez des thèmes"}, {class: "selectize-themes", multiple: true} %>

	<%= f.label :image %>
	<%= f.file_field :image %>

	<%= f.submit %>

<% end %>