<%= form_for [:admin, @page] do |f| %>

  <%= render 'error_messages', object: f.object %>

  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :content %></td>
      <td><%= f.text_area :content %></td>
    </tr>
    <tr>
      <td><%= f.label :help_category_id %></td>
      <td><%= f.collection_select :help_category_id, HelpCategory.all, :id, :name %></td>
    </tr>
    <tr>
      <td><%= f.submit %></td>
    </tr>
  </table>

<% end %>